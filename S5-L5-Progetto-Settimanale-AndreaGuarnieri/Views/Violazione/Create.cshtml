@model S5_L5_Progetto_Settimanale_AndreaGuarnieri.Models.TipoViolazione

<h2>Aggiungi Nuova Violazione</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Descrizione">Descrizione</label>
        <input type="text" class="form-control" asp-for="Descrizione" />
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Importo">Importo</label>
        <input type="number" step="0.01" class="form-control" asp-for="Importo" />
        <span asp-validation-for="Importo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DecurtamentoPunti">Decurtamento Punti</label>
        <input type="number" class="form-control" asp-for="DecurtamentoPunti" />
        <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salva</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
